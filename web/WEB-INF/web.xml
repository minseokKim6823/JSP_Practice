<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">
    <context-param>
        <param-name>Driver</param-name>
        <param-value>org.mariadb.jdbc.Driver</param-value>   <!-- 연결할 드라이버 이름 -->
    </context-param>
    <context-param>
        <param-name>URL</param-name>
        <param-value>jdbc:mariadb://localhost:3306/maria</param-value> <!-- 접속할 URL : mariadb의 포트번호 3306 -->
    </context-param>
    <context-param>
        <param-name>dbId</param-name>      <!-- 연결할 DB의 아이디 정보 -->
        <param-value>root</param-value>
    </context-param>
    <context-param>
        <param-name>dbPwd</param-name>    <!-- 연결할 DB의 비밀번호 정보 -->
        <param-value>1234</param-value>
    </context-param>
</web-app>


